{
  "name": "cursor-rules-template",
  "displayName": "Cursor Rules Template",
  "description": "A VSCode extension for managing and applying .cursorrules templates | VSCode插件用于管理和应用.cursorrules模板",
  "version": "1.0.5",
  "publisher": "kelisiWu",
  "author": "kelisiWu",
  "repository": {
    "type": "git",
    "url": "https://github.com/kelisiWu123/cursor-rules-wizard.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-rules.applyTemplate",
        "title": "应用Cursor规则模板",
        "category": "Cursor Rules",
        "icon": {
          "light": "resources/light-icon.png",
          "dark": "resources/dark-icon.png"
        }
      },
      {
        "command": "cursor-rules.saveAsTemplate",
        "title": "保存为 Cursor Rules 模板"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename == '.cursorrules'",
          "command": "cursor-rules.saveAsTemplate",
          "group": "cursorRules"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-templates",
    "copy-templates": "mkdir -p out/templates/roles && cp -r src/templates/roles/*.json out/templates/roles/",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^16.x.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "eslint": "^8.x.x",
    "typescript": "^4.x.x"
  }
}
